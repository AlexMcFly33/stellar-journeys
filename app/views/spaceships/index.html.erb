<%= render 'shared/filter' %>

<div class="container mt-2">
  <% if @spaceships.count == 1%>
      <p id = "ptitle"><i><%= @spaceships.count %> spaceship is available :</i></p>
    <% elsif Spaceship.count > 1%>
      <p id = "ptitle"><i><%= @spaceships.count %> spaceships are available :</i></p>
    <% elsif %>
      <p id = "ptitle"><i>Sorry, no result match with your research</i></p>
  <% end %>
</div>
<div class="container cards">
  <% @spaceships.each do |spaceship| %>
    <%= link_to spaceship_path(spaceship), class: "link-cards" do%>
      <div class="card-trip">
        <% if spaceship.photo.attached? %>
          <%= cl_image_tag spaceship.photo.key %>
        <% else %>
          <%= image_tag("no_spaceship.jpg") %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= spaceship.name %></h2>
            <p>📍<%= spaceship.localisation %></p>
          </div>
          <h2 class="card-trip-pricing"><%= spaceship.price %>€</h2>
          <% if spaceship.user.photo.attached? %>
              <%= cl_image_tag spaceship.user.photo.key, class: "card-trip-user avatar-bordered" %>
          <% else %>
              <img class= "card-trip-user avatar-bordered" src="https://img.myloview.com/stickers/default-avatar-profile-icon-vector-social-media-user-image-700-205124837.jpg" alt="avatar">
          <% end %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
